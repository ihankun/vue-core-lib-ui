{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": ["components/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    // "lib/**/*.ts",
    // "lib/**/*.tsx",
    // "lib/**/*.vue",
    // "src/**/*.ts",
    // "src/**/*.tsx",
    // "src/**/*.vue",
    // "tests/**/*.ts",
    // "tests/**/*.tsx", 
    // "packages/**/*.ts",
    // "packages/**/*.tsx",
    // "packages/**/*.vue",
    "components/**/*.ts",
    "components/**/*.tsx",
    "components/**/*.vue"  
  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist"
  ]
}
